#:import utils kivy.utils
#:set couleur_orange "#DD7835"
#:set couleur_gris "#C8C8C8"

MainWidget:

<MainWidget>:
    proprieteRecycleView: IdRecycleView
    CoverImage:
        source: "images/menu_background.jpg"
    RecycleView:
        id: IdRecycleView
        viewclass: 'PizzaWidget'
        RecycleBoxLayout:
            default_size: None, dp(56)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: "16dp"

<CoverImage@CoverBehavior+Image>:
    reference_size: self.texture_size

<LeftAlignedLabel@Label>:
    text_size: self.size
    halign: 'left'
    valign: 'middle'

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<BadgeVege@FitLabel>:
    color: 0, 0, 0
    font_size: "10dp"
    bold: True
    padding: "8dp", "3dp"
    canvas.before:
        Rectangle:
            source: "images/badge.png"
            size: self.size
            pos: self.pos

<RandomBackgroudColor@Widget>:
    canvas.before:
        Color:
            rgb: utils.get_random_color()
        Rectangle:
            size: self.size
            pos: self.pos


<PizzaWidget>:   #BoxLayout
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            spacing: "10dp"
            FitLabel:   # NOM
                text: root.nom
                font_size: "22dp"
                bold: True
            BadgeVege:   # VEGETARIENNE
                text: 'VÉGÉTARIENNE' if root.vegetarienne else ''
        LeftAlignedLabel:   # INGREDIENTS
            text: root.ingredients
            color: utils.get_color_from_hex(couleur_gris)
    FitLabel:   # Prix
        text: str(root.prix) + "€"
        font_size: "20dp"
        color: utils.get_color_from_hex(couleur_orange)

