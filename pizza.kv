#:import utils kivy.utils
#:set couleur_orange "#DD7835"
#:set couleur_gris "#C8C8C8"

MainWidget:

<MainWidget>:
    proprieteRecycleView: IdRecycleView
    CoverImage:
        source: "images/menu_background.jpg"
        canvas:
            Color:
                rgba: 0, 0, 0, 0.6
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayout
        orientation: "vertical"
        Image:
            source: "images/small_logo.png"
            size_hint: None, None
            size: "150dp", "60dp"
            allow_stretch: True
            pos_hint: {"center_x": .5}
        TitleLabel:
            text: "Les pizzas"
        BoxLayout:
            padding: "20dp", "20dp"
            RecycleView:
                id: IdRecycleView
                viewclass: 'PizzaWidget'
                RecycleBoxLayout:
                    default_size: None, dp(56)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: "16dp"
        Label: #BANDEAU ERREUR
            text: root.error_str
            font_size: "12dp"
            bold: True
            size_hint: 1, None
            height: "0dp" if root.error_str == "" else "30dp"
            canvas.before:
                Color:
                    rgb: 1, 0, 0
                Rectangle:
                    pos: self.pos
                    size: self.size

<CoverImage@CoverBehavior+Image>:
    reference_size: self.texture_size

<TitleLabel@FitLabel>
    font_size: "22dp"
    bold: True
    padding: "16dp", "3dp"
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex(couleur_orange)
        Rectangle:
            pos: self.pos
            size: self.size

<LeftAlignedLabel@Label>:
    text_size: self.size
    halign: 'left'
    valign: 'middle'

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<BadgeVege@FitLabel>:
    color: 0, 0, 0
    font_size: "10dp"
    bold: True
    padding: "8dp", "3dp"
    canvas.before:
        Rectangle:
            source: "images/badge.png"
            size: self.size
            pos: self.pos

<RandomBackgroudColor@Widget>:
    canvas.before:
        Color:
            rgb: utils.get_random_color()
        Rectangle:
            size: self.size
            pos: self.pos


<PizzaWidget>:   #BoxLayout
    BoxLayout:
        orientation: "vertical"
        size_hint_max_x: "300dp"
        size_hint_min_x: "150dp"
        BoxLayout:
            spacing: "10dp"
            FitLabel:   # NOM
                text: root.nom
                font_size: "22dp"
                bold: True
            BadgeVege:   # VEGETARIENNE
                text: 'VÉGÉTARIENNE' if root.vegetarienne else ''
        LeftAlignedLabel:   # INGREDIENTS
            text: root.ingredients
            color: utils.get_color_from_hex(couleur_gris)
    FitLabel:   # Prix
        text: str(root.prix) + "€"
        font_size: "20dp"
        color: utils.get_color_from_hex(couleur_orange)
        pos_hint: {"top": .9}

