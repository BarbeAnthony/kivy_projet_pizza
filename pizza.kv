#:import utils kivy.utils

MainWidget:

<MainWidget>:   # BoxLayout
    proprieteRecycleView: IdRecycleView
    RecycleView:
        id: IdRecycleView
        viewclass: 'PizzaWidget'
        RecycleBoxLayout:
            default_size: None, dp(100)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

<LeftAlignedLabel@Label+RandomBackgroudColor>:
    text_size: self.size
    halign: 'left'
    valign: 'middle'

<FitLabel@Label>:
    size_hint: None, None
    size: self.texture_size

<BadgeVege@FitLabel>:
    color: 0, 0, 0
    font_size: "10dp"
    bold: True
    padding: "8dp", "3dp"
    canvas.before:
        Rectangle:
            source: "images/badge.png"
            size: self.size
            pos: self.pos

<RandomBackgroudColor@Widget>:
    canvas.before:
        Color:
            rgb: utils.get_random_color()
        Rectangle:
            size: self.size
            pos: self.pos


<PizzaWidget>:   #BoxLayout
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            spacing: "10dp"
            FitLabel:
                text: root.nom
            BadgeVege:
                text: 'VÉGÉTARIENNE' if root.vegetarienne else ''
        LeftAlignedLabel:
            text: root.ingredients
    Label:
        text: str(root.prix) + "€"
        text_size: self.size
        halign: 'right'
        valign: 'middle'
